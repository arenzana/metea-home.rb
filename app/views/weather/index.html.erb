<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<link href='http://fonts.googleapis.com/css?family=Cutive+Mono'
	rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Open+Sans:300&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
<style>

result_text {
	font-family: 'Open Sans', 'sans-serif';
	font-size: 14px;
	font-weight: 300;
	margin-right:2cm;
}

h1 {
	font-family: 'Open Sans','sans-serif';
	font-weight: 300;
	font-size: 40px;
	text-align:center;
}
</style>
<title>Metea Home.rb - v0.2</title>
<h1>Metea Home</h1>
<br />
<div align="right">
	<result_text>
		<%= @fwa_out_temp %> <br />
		<%= @fwa_in_temp %> <br />
		<%= @fwa_updated_temp %> <br />
	</result_text>
</div>
<div>
<%= line_chart [
  {name: "Fort Wayne", data: @fwa_temp_data_array.map{|t| [Time.at(t.SSBOE).in_time_zone("Eastern Time (US & Canada)"), t.TemperatureC] }},
  {name: "House", data: @fwa_temp_data_array.map{|t| [Time.at(t.SSBOE).in_time_zone("Eastern Time (US & Canada)"), t.HouseTemperatureC] }}
] %>
</div>
